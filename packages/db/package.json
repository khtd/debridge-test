{
  "name": "@debridge-test/db",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "migrate:dev": "npm run build && node -r dotenv/config dist/migrate.js && npm run gen:db-types && npm run build",
    "migrate:latest": "node dist/migrate.js",
    "migrate:down": "node -r dotenv/config dist/migrate.js -- --direction=down",
    "gen:db-types": "kysely-codegen --env-file .env --dialect postgres --camel-case --out-file ./src/infra/db.types.ts"
  },
  "dependencies": {
    "envalid": "^8.1.1",
    "kysely": "^0.28.9",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "kanel": "^3.16.0",
    "kysely-codegen": "^0.19.0"
  }
}
